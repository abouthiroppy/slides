{
  "name": "slides",
  "version": "1.0.0",
  "description": "My slides using fusuma",
  "config": {
    "name": "util.types"
  },
  "scripts": {
    "start": "webpack-dev-server --env.name $npm_package_config_name",
    "build": "NODE_ENV=production webpack --env.name $npm_package_config_name",
    "build:all": "npm run clean && NODE_ENV=production webpack",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint src/**/*.css",
    "deploy": "npm run build && gh-pages -d dist -a",
    "deploy:all": "npm run clean && npm run build:all && gh-pages -d dist",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abouthiroppy/slides.git"
  },
  "author": "abouthiroppy <git@about-hiroppy.com> (http://about-hiroppy.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abouthiroppy/slides/issues"
  },
  "homepage": "https://github.com/abouthiroppy/slides#readme",
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-sky": "^1.4.3",
    "fusuma": "0.0.2",
    "stylelint": "^8.2.0",
    "stylelint-config-sky": "^1.1.0"
  }
}
